<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.qsoft.onlinedio"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="9"/>

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
                 android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".activity.FirstLaunchActivity_"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity_"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".filecache.HomeItemView"/>
        <activity android:name=".activity.ProfileActivity_"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".fragment.AddComment_"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".activity.SlidebarActivity_"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <provider android:authorities="com.qsoft.onlinedio.homefeed.provider"
                  android:name=".database.ContentProvider"
                  android:label="@string/provider_name"
                  android:exported="false"/>

        <service android:name=".authenticate.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                       android:resource="@xml/authenticator"/>
        </service>

        <service
                android:name=".syncadapter.HomeFeedSyncService"
                android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                    android:name="android.content.SyncAdapter"
                    android:resource="@xml/syncadapter" />
        </service>


    </application>
    <!-- client -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <!-- Authenticator -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <!-- Required for caching thumbnail -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>
