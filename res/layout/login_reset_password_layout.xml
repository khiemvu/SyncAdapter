<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:text="@string/message" android:layout_gravity="center_horizontal"/>
    <EditText android:id="@+id/et_dlEmail" android:inputType="textEmailAddress" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp" android:layout_marginBottom="4dp" android:hint="Email Address"/>
</LinearLayout>